---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="flex justify-center">
			<div class="w-5/6 lg:w-3/5">
				<h1 class="text-5xl pt-16 pb-4 text-center">
					<span class="font-bold">Samuel Colman:</span><br />
					<span class="text-4xl">A Catalogue of the Artist's Etchings</span>
				</h1>

				<ul class="grid grid-cols-3 text-center pt-4 justify-center items-center md:ml-18 md:mr-18 md:text-xl">
					<li><a href="/">Etchings</a></li>
					<li><a href="/colman.html">Biography of the Artist</a></li>
					<li><a href="/faq.html">About this Catalogue</a></li>
				</ul>
			
				<main>
					<slot />
				</main>
			</div>
		</div>
	</body>
</html>

<style is:global>
    a {
        color: red;
    }

    a:visited {
        color: blue;
    }

    p {
        padding-bottom: 0.5rem;
    }
</style>